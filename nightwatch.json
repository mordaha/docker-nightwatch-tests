{
  "src_folders": ["."],
  "output_folder": "./reports",
  "custom_commands_path": "",
  "custom_assertions_path": "",
  "page_objects_path": "",
  "globals_path": "",
  "selenium": {
    "start_process": false
  },
  "test_settings": {
    "default": {
      "launch_url": "",
      "silent": true,
      "selenium_host": "127.0.0.1",
      "selenium_port": 9515,
      "screenshots": {
        "enabled": true,
        "on_failure": true,
        "on_error": true,
        "path": "./screenshots"
      },
      "desiredCapabilities": {
        "browserName": "chrome",
        "javascriptEnabled": true,
        "acceptSslCerts": true,
        "chromeOptions": {
          "args": ["--no-sandbox", "start-fullscreen", "window-size=1280,800"]
        }
      }
    }
  }
}
